<%= render 'shared/message' %>
<h1 align="center">Listing all book information</h1>

<%= link_to 'Add Book Information', new_book_path, :class => "btn btn-outline-dark btn-lg", :id => "text-size"%>

<% @books.each do |book| %>
<hr>
<div class="row">
  <div class="col-sm-12">
    <div class="well well-lg">

      <div class="row">
        <div class="col-sm-3">
          <a href="<%= (book_path(book)) %>>"><image src = "<%= (url_for(book.avatar)) %>" height="405" width="260"></a>
        </div>
        <div class="col-sm-9">
          <div class="book-title left">
            <h3><%= link_to book.title, book_path(book) %></h3>
          </div>


          <div class="book-body left">
            <div class="row">
              <div class="col-lg-3">
                <h4><strong>ISBN:</strong></h4>
                <h4><strong>Author:</strong></h4>
              </div>
              <div class="col-lg-9">
                <h4><%= book.isbn %></h4>
                <h4><%= book.author %></h4>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-3">
                <h4><strong>Summaries:</strong></h4>
              </div>
              <div class="col-lg-9">
                <h4 class="custom-sum"><%= book.summaries %></h4>
              </div>
            </div>

          </div>
          <div class="book-actions right">
            <%= link_to "Edit", edit_book_path(book), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", book_path(book), method: :delete,
            data: { confirm: "Are you sure you want to delete the book information?"},
            class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<% end %>
