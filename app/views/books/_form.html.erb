

<%= render 'shared/errors', obj:@book %>

<div class='jumbotron'>
  <div class='col-md-12'>
    <%= form_for @book do |f| %>
    <div class="form-group row">
      <div class="col-lg-2 control-label left">
        <%= f.label :ISBN, class:"uppercase" %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :isbn, class: "form-control", placeholder: "Code of the book", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-sm-2 left">
        <%= f.label :Title %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, rows: 10, class: "form-control", placeholder: "Title of the book " %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-sm-2 left">
        <%= f.label :Author %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :author, class: "form-control", placeholder: "Author", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-sm-2 left">
        <%= f.label :Summaries %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :summaries, class: "form-control", placeholder: "Summaries", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-sm-2 left">
        <%= f.label :Photo %>
      </div>
      <div class="col-sm-10 left">
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div>
      <br>
      <br>
      <div class="row form-group">

        <div class="col-sm-3 right">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
        <div class="col-sm-4">
        </div>

        <div class="col-sm-5 right">
          [ <%= link_to "Cancel request and return to books listing", books_path, class:"center" %> ]
        </div>
    </div>

    </div>
    <% end %>

  </div>
</div>
